        <item name="themeFilterCheckedChipForegroundColor">@color/white87</item>
        <item name="themeFilterCheckedChipBorderColor">@color/white87</item>
        <item name="themeFilterCheckedChipBackgroundColor">@color/white20</item>
        <item name="themeFilterChipForegroundColor">@color/white87</item>
        <item name="themeFilterChipBorderColor">@color/white12</item>
    </style>

    <style name="AppTheme.NoActionBar.Amoled">
        <item name="themePrimaryColor">@color/black</item>
        <item name="themePrimaryDarkColor">@color/black</item>
        <item name="themeAccentColor">@color/orange_peaceful</item>

        <item name="themeTopHeadlinesAccentColor">@color/orange_peaceful</item>
        <item name="themeTopHeadlinesAccentColor20">@color/orange_peaceful20</item>

        <item name="themeAppBackgroundColor">@color/black</item>
        <item name="themeAppNavBarBackgroundColor">@color/black</item>

        <item name="themeTopBarTitleTextColor">@color/white87</item>
